%Rectangular pulse
fs=500;%sampling frequency
T=0.2;%width of the rectangular pulse in seconds
t=-0.5:1/fs:0.5;%time base
x=rectpuls(t,T);%generating the square wave
plot(t,x);
title(['Rectangular pulse width=',num2str(T),'s']);
xlabel('time(s)');
ylabel('Amplitude');

%Unitimpulse signal
clc
t=-2:1:2;%Generate time vector
y=[zeros(1,2),ones(1,1),zeros(1,2)];stem(t,y);%plot the discrete signal
title('Unitimpulse');
xlabel('time');%write x label
ylabel('Amplitude')%write y label

